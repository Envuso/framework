{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {

    "lib": ["ES2016"],
    "module": "commonjs",
    "target": "ES2016",

    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "./src/",
    "baseUrl": "./src/",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@envuso/core"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "tests/example.test.ts"
  ],
  "include": [
    "./src/Config/**/*",
    "./src/**/*"
  ]
}
