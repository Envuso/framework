{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": ".",
    "sourceRoot": "./src",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es5",
      "es6"
    ],
    "types": [
      "node",
      "reflect-metadata",
      "jest",
      "@envuso/core",
      "@envuso/common",
      "@envuso/routing",
      "@envuso/database",
      "@envuso/app",
      "@envuso/storage",
      "@envuso/authentication",
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "paths": {
      "@App/*": [
        "src/App/*"
      ],
      "@AppControllers/*": [
        "src/App/Http/Controllers/*"
      ],
      "@AppMiddlewares/*": [
        "src/App/Http/Middleware/*"
      ],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}
