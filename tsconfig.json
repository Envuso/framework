{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {

    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "./src/",
    "baseUrl": "./src/",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "reflect-metadata",
      "jest",
      "@envuso/core",
      "@envuso/common",
      "@envuso/routing",
      "@envuso/database",
      "@envuso/app",
      "@envuso/storage",
      "@envuso/authentication",
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "tests/example.test.ts"
  ],
  "include": [
    "./src/Config/**/*",
    "./src/**/*"
  ]
}
